<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.lkw.domain">

	<class name="User" table="t_user">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
		
		<property name="name" column="name" length="50"></property><!-- 不写那么数据库也是name -->
		<property name="userName" column="username" length="50"></property>
		<property name="userPwd" column="userpwd" length="50"></property>
		<property name="imgUrl" column="imgurl" length="150"></property>
	
	</class>

</hibernate-mapping>